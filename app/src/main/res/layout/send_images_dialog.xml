<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/serverAddressLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_dialog_message"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeWidth="3sp"
        android:layout_margin="10dp"
        app:expandedHintEnabled="false">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/filenameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:freezesText="true"
        android:hint="@string/filename_hint"
        android:imeOptions="flagNoExtractUi"
        android:singleLine="true"
        tools:ignore="VisualLintTextFieldSize,TextContrastCheck,TextContrastCheck" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>